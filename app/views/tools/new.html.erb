<h1>New Tool</h1>
<% render "form" , tool: @tool %>
<%= form_with model: @tool do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @tool.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @tool.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>